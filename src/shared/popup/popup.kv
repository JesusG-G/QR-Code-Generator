<SuccessPopup@Popup>
    auto_dismiss: False
    size_hint: 0.6, 0.4
    pos_hint: {"x":0.2, "top":0.9}
    title: "Success"
    BoxLayout:
        orientation:"vertical"
        spacing: 10
        Label:
            text:"QR CODE Successfully created."
            font_size: 20
        Button:
            text:"Close"
            font_size: 24
            on_release: root.dismiss()

